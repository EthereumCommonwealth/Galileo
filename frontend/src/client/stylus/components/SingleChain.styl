.SingleChain
  display grid
  position relative
  grid-template-columns .25fr 1fr
  align-items center
  grid-gap .5em
  background-color $white
  border-radius 5px
  box-shadow 0 14px 14px 0 rgba(29, 53, 77, 0.06)
  padding 1em
  z-index 1
  transition all 150ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
  &:hover
    box-shadow 0 0 0 1px $blue
  &-figure
    width 50px
    margin 0
    img
      width 100%
  &-name
    font-weight bold
    font-family $secondary-font
  &-anchor
    position absolute
    width 100%
    height 100%
    top 0
    left 0
