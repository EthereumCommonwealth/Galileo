.SingleChain
  display grid
  position relative
  grid-template-columns .25fr 1fr
  align-items center
  grid-gap .5em
  border-radius 5px
  box-shadow 0 14px 14px 0 rgba(29, 53, 77, 0.06)
  padding 1em
  z-index 1
  border solid 1px $blue
  border-bottom solid 4px $blue
  &-figure
    width 50px
    margin 0
    img
      width 100%
  &-name
    font-weight bold
    font-family $secondary-font
    color #000
  &-anchor
    position absolute
    width 100%
    height 100%
    top 0
    left 0
